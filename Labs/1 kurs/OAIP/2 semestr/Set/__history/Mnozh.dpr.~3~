program Mnozh;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

const
  nmax=100;
var
glas: set of 'A'..'Z';
s : string;
temp: array of string;
Flag: array [1..7, 1..nmax] of integer;
{FlagA: array of boolean;
FlagW: array of boolean;
FlagE: array of boolean;
FlagY: array of boolean;
FlagU: array of boolean;
FlagI: array of boolean;
FlagO: array of boolean; }
i,v:integer;
bukv:char;
procedure glaspos(t:array of string);
var
l:char;
begin
  for I := 1 to High(temp) do
    begin
       for v := 1 to length(temp[i]) do
         case t[v] of
          'A': Flag[1,i]:= 1;
          'W': Flag[2,i]:= 1;
          'E': Flag[3,i]:= 1;
          'Y': Flag[4,i]:= 1;
          'U': Flag[5,i]:= 1;
          'I': Flag[6,i]:= 1;
          'O': Flag[7,i]:= 1;
         end;
    end;
end;
begin
  glas := ['A','W','E','Y','U','I','O'];
  writeln('¬ведите строку');
  readln(s);
  bukv:=s[1];
  i:=1;
  v:=1;
  while v < length(s) do
  begin
   while (bukv <> ',') and (bukv <> '.')  do
   begin
    temp[i]:=temp[i]+bukv;
    v:=v+1;
    bukv:=s[v];
   end;
   i:=i+1;
   v:=v+1;
  end;
  glaspos();


end.
